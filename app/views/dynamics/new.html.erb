<div class="container">
  <h1 class="text-xl font-bold mb-6">Nova Dinâmica</h1>

  <div class="card">
    <%= form_with(model: @dynamic, local: true, id: 'dynamic-form') do |form| %>
      <div class="mb-4">
        <%= form.label :name, 'Nome da Dinâmica', class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="mb-4">
        <%= form.label :description, 'Descrição', class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', rows: 4, required: true %>
      </div>

      <div class="flex gap-2 mt-6">
        <%= form.submit 'Salvar', class: 'btn btn-primary' %>
        <%= link_to 'Cancelar', dynamics_path, class: 'btn btn-outline' %>
      </div>
    <% end %>
  </div>
</div>